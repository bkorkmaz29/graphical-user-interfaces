        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Date :   </span>
            </div>
            <input asp-for="Date" type="text" class="form-control" placeholder="(Model.Date)">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Time :  </span>
            </div>
            <input asp-for="Time" type="text" class="form-control" placeholder="(Model.Time)">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Description :   </span>
            </div>
            <input asp-for="Description" type="text" class="form-control" placeholder="(Model.Description)">
        </div>
