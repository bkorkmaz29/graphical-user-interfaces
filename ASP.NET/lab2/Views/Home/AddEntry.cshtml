@model lab2.Models.AddEntry
@*@inject lab2.Models.ISessionManager _sessionManager*@

@{
    ViewData["Title"] = "AddEntry";
}
<script src="//code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>


<form method="post" asp-action="AddNewEntry">
    <div class="border p-3">
        <div class:"form-group row">
            <h2 class="text-black-50 pl-3">Add Entry</h2>
        </div>
        <div class="text-center col-md-6">
            <div class="classWithPad">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</div>
        </div>
        <div class="input-group mb-1">
            <div class="input-group-prepend">
                <span class="input-group-text">Code :   </span>
            </div>
            <select class="form-control" name="Code">
                @foreach (var d in Model.Codes)
                {
                    <option value=@d>@d</option>
                }
            </select>
            <input data-val="true" data-val-required="Code is required"
                   id="Code" name="Code" type="hidden" value=@ViewData["code"] />
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">Date :   </span>
            </div>
            <input class="datefield" data-val="true" data-val-required="Date is required"
                   id="DisplayDate" name="DisplayDate" type="date" value=@ViewData["date"] />
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Time :  </span>
            </div>
            <input asp-for="Time" type="number" class="form-control" placeholder="Enter Time Spent">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Description :   </span>
            </div>
            <input asp-for="Description" type="text" class="form-control" placeholder="Enter Description">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Add" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    <script>
        $(function () {

            $('.datepicker').datepicker();
        });

    </script>
    <script>
        $(".codeslect option").click(function () {
            var selText = $(this).text();
            $('#code').val(selText);
        });
    </script>


    }